{% extends "_base.j2" %}
{% block styles %}
    {{ super() }}
    <style>
        .checkbox_krankheit{
            top:67px;
            height:86%;
        }
        .fragen_checkbox_label_right, .fragen_checkbox_label_wrong{
            border-style:solid;
            border-width: 2px;
            margin:0;
            padding:7;
            text-align:left;
            margin-left:-2px;
            margin-bottom:2px;
        }
        .fragen_checkbox_label_right{
            border-color:green;
        }
        .fragen_checkbox_label_wrong{
            border-color:red;
        }
        .Fragen{
            height:90%;
            overflow:hidden; 
            overflow-y:scroll;
        }
        .Frage-Antwort{
            margin-bottom:5;
            border-style:solid;
            border-color:lightgrey;
            border-width: 3px;
        }
        .Frage{
            margin-left:2px;
        }
        .Antworten{
            margin-left:5px
        }
        #cbxfragenright{
            border-color:green;
        }
        #cbxfragenwrong{
            border-color:red;
        }
        #btn_kh_cbxsubmit{
            width:15%;
        }
        #cbx_checkall{
            width:10%;
            position:fixed;
            bottom:0;
            left:192px;
        }
        #btn_kh_cbxsubmit, #cbx_checkall{
            display:inline;
        }
    </style>
{% endblock %}
{% set active_link = 'Fragen' %}

{% block title %} <title>Fragen</title> {% endblock %}
{% block navbar %}
    {{ super() }}
{% endblock %}
{% block left_navbar %}
    {# Krankheitsauswahl -> Checkbox #}
    <div class='left_navbar'>
        <form method='POST'>
            <ul class="checkbox_krankheit">
                {% for krankheit in krankheiten %}
                    <li>
                        <label class='kh_checkbox_label'>
                            {{ krankheit }}<input type="checkbox" name="checkbox_Krankheit" value="{{ krankheit }}" id="cbx_kh" {% if cbx_checked == True %} checked {% endif %}>
                        </label>
                    </li>
                {% endfor %}
            </ul>
            <input type="submit" name="submit" value="Best√§tigen" id="btn_kh_cbxsubmit">
        </form>
        {# Kreuze alle Krankheitencheckboxen an #}
        <form method='POST'>
            <input type="submit" name="cbx_checkall" {% if cbx_checked ==True %} value="Keine Krankheiten" {% else %} value="Alle Krankheiten" {% endif %} id="cbx_checkall">
            <input type="hidden" name="cbx_allchecked" value="{{cbx_checked}}"> {# F√ºr alternierendes Check / Uncheck Aller Krankheitencheckboxen #}
        </form>
    </div>
{% endblock %}
{% block content %}
    {# Fragen Ansicht => neugenerieren o. l√∂schen #}
    <div class='content'>
        <div class='Fragen'>
            {% for krankheit in fragenDicts %}
                {% for umstand in krankheit.get('Umst√§nde') %}
                    <div class="Frage-Antwort">
                        <p>
                            <h4 class="Frage">{{ krankheit.get('Umst√§nde').get(umstand).get('Frage') }}</h4>
                            <p>
                                {# Fragenoptinen #}
                                <div class="Antworten">
                                    {% for antwort in krankheit.get('Umst√§nde').get(umstand).get('Antworten') %}
                                        {# fragen_checkbox_label_wrong => rote Umrandung, ..._right => gr√ºne Umrandung #}
                                        <label {% if krankheit.get('Umst√§nde').get(umstand).get('Antworten').get(antwort) == "wrong" %} class='fragen_checkbox_label_wrong' {% else %} class='fragen_checkbox_label_right' {% endif %}>
                                            {{ antwort }} <input type="checkbox" name="{{ antwort }}" value="{{ krankheit.get('Umst√§nde').get(umstand).get('Antworten').get(antwort) }}">
                                        </label>
                                    {% endfor %}
                                </div>
                            </p>
                            {# neu generieren #}
                            <form style='display:inline;' action='/fragen_update' method='POST'>
                                <button type='submit' name='fragenupdate' value='{"krankheit":"{{ krankheit.get("Krankheit") }}","umstand":"{{ umstand }}"}'>üîÑ</button>
                            </form>
                            {# l√∂schen #}
                            <form style='display:inline;' action='/fragen_delete' method='POST'>
                                <button type='submit' name='fragendelete' value='{"krankheit":"{{ krankheit.get("Krankheit") }}","umstand":"{{ umstand }}"}'>üóëÔ∏è</button>
                            </form>
                        </p>
                    </div>
                {% endfor %}
            {% endfor %}
            {# f√ºr den Fall, dass fragenDicts leer ist #}
            {# soll nix exportiert werden k√∂nnen #}
            {% if fragenDicts != [] %}
                <form method="POST">
                    <button type="submit" name="exportdata" id="btn_fragen_cbxexport">Export</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
