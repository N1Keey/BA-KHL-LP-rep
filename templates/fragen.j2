{% extends "_base.j2" %}
{% block styles %}
    {{ super() }}
    <style>
        .cbx_kh{
            top:66px;
            height:87.2%;
        }
        .fragen_checkbox_label_right, .fragen_checkbox_label_wrong{
            border-style:solid;
            border-width: 2px;
            margin:0;
            padding:7;
            text-align:left;
            margin-left:-2px;
            margin-bottom:2px;
        }
        .fragen_checkbox_label_right{
            border-color:green;
        }
        .fragen_checkbox_label_wrong{
            border-color:red;
        }
        .Frage-Antwort{
            margin-bottom:5;
            border-style:solid;
            border-color:lightgrey;
            border-width: 3px;
        }
        .Antworten{
            margin-left:5px
        }
        #cbxfragenright{
            border-color:green;
        }
        #cbxfragenwrong{
            border-color:red;
        }
        #btn_kh_cbxsubmit{
            width:15%;
        }
        #cbx_checkall{
            width:10%;
            position:fixed;
            bottom:0;
            left:192px;
        }
    </style>
{% endblock %}
{% set active_link = 'Fragen' %}

{% block title %} <title>Fragen</title> {% endblock %}
{% block navbar %}
    {{ super() }}
{% endblock %}
{% block vert_navbar %}
    <div class='vert_navbar'>
        <form method='POST'>
            <ul class="cbx_kh">
                {% for krankheit in krankheiten %}
                    <li>
                        <label class='kh_checkbox_label'>
                            {{ krankheit }}<input type="checkbox" name="checkbox_Krankheit" value="{{ krankheit }}" id="cbx_kh" {% if cbx_checked == True %} checked {% endif %}>
                        </label>
                    </li>
                {% endfor %}
            </ul>
            <input type="submit" name="submit" value="BestÃ¤tigen" id="btn_kh_cbxsubmit">
        </form>
        <form method='POST'>
            <input type="submit" name="cbx_checkall" {% if cbx_checked ==True %} value="Keine Krankheiten" {% else %} value="Alle Krankheiten" {% endif %} id="cbx_checkall">
            <input type="hidden" name="cbx_allchecked" value="{{cbx_checked}}">
        </form>
    </div>
{% endblock %}
{% block content %}
    <div class='content'>
        <form method='POST'>
            {% for krankheit in fragenDicts %}
                {% for schema in krankheit %}
                    {% if schema != 'Krankheit' %}
                        <div class="Frage-Antwort">
                            <p>
                                <h4>Welche <b>{{ schema }}</b> treten bei einer <b>{{ krankheit['Krankheit'] }}</b> auf?</h4>
                                <p>
                                    <div class="Antworten">
                                        {% for antwort in krankheit.get(schema) %}
                                            <label {% if krankheit.get(schema).get(antwort) == "wrong" %} class='fragen_checkbox_label_wrong' {% else %} class='fragen_checkbox_label_right' {% endif %}>
                                                {{ antwort }} <input type="checkbox" name="{{ antwort }}" value="{{ krankheit.get(schema).get(antwort) }}">
                                            </label>
                                        {% endfor %}
                                    </div>
                                </p>
                            </p>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        <form>
        {% if fragenDicts != [] %}
            <form method="POST">
                <button type="submit" name="exportdata" id="btn_fragen_cbxexport">Export</button>
            </form>
        {% endif %}
    </div>
{% endblock %}
