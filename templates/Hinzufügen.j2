{% extends "_base.j2" %}
{% block styles %}
    {{ super() }}
    <style>
        .vert_navbar{
            float:left;
            width:25%;
            position: relative;
            top:0;
            bottom:0;
        }
        #btn_add, #tf_add{
            display:inline;
            padding:0;
            height:30px;
        }
        #tf_add{width:80%}
        #btn_add{
            width:20%;
            margin-left: -4;
        }
        .vert_navbar ul {
            padding: 0;
            margin-top:-14;
            width: 25%;
            overflow-y: auto;
            position: fixed;
            height:86.5%;
        }
        #rdo_kh{
            float:right;
        }
        .kh_radio_label{
            border-style:solid;
            border-color: lightgreen;
            border-width: 1px;
            width:100%;
            margin:0;
            padding:7;
        }
        .kh_radio_label:hover{
            background-color:lightgreen;
        }
        .content{
            position: relative;
            width: 75%;
            float: right;
        }
        #btn_schema{
            width:100%;
            height:100%;
        }
        table {
            width: 100%;
            margin:0;
        }
        
    </style>
{% endblock %}
{% set active_link = 'Hinzuf端gen' %}
{% block title %} <title>Hinzuf端gen</title> {% endblock %}
{% block navbar %}
    {{ super() }}
{% endblock %}
{% block vert_navbar %}
    <div class='vert_navbar'>
        <form action="?" method='POST'>
            <input type="text" id="tf_add" name="Krankheit_name" placeholder="Krankheit Name:" autocomplete="off" autofocus>
            <button type="submit" name= "Btn_add_Krankheit" id="btn_add">einf端gen</button>
        </form>
        <form action="?" method='POST'>
            <ul>
                {% for krankheit in krankheiten %}
                    <li>
                        <label class='kh_radio_label'>
                        {{ krankheit['Krankheit'] }}<input type="radio" name="radio_Krankheit" value="{{ krankheit['Krankheit'] }}" id="rdo_kh">
                        </label>
                    </li>
                {% endfor %}
            </ul>
    </div>
{% endblock %}
{% block content %}
    <div class='content'>
            <table>
                <tr>
                    <th><button type="submit" name="Btn_Kh_schema" value="Beschreibung" id="btn_schema">Beschreibung</button></th>
                    <th><button type="submit" name="Btn_Kh_schema" value="Ursachen" id="btn_schema">Ursachen</button></th>
                    <th><button type="submit" name="Btn_Kh_schema" value="Symptome" id="btn_schema">Symptome</button></th>
                    <th><button type="submit" name="Btn_Kh_schema" value="Komplikationen" id="btn_schema">Komplikationen</button></th>
                    <th><button type="submit" name="Btn_Kh_schema" value="Diagnostiken" id="btn_schema">Diagnostiken</button></th>
                    <th><button type="submit" name="Btn_Kh_schema" value="Therapien" id="btn_schema">Therapien</button></th>
                </tr>
            </table>
                <p>{{ message }}</p>
                {% for element in schemacontent %}
                    <p> {{element}} </p>
                {% endfor %}
                
            {% if active_schema %}
                <input type="text" name="kh_newcontent" placeholder="Neue/s {{active_schema}}" autocomplete="off" autofocus>
                <input type="submit" name="kh_addcontent" id="btn_add" value="hinzuf端gen">
            {% endif %}
        </form>
    </div>
{% endblock %}